{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "outDir": ".tmp/js",
        "rootDirs": [
            "src",
            "gen"
        ]
    },
    "include": [
        "src/**/*",
        "gen/**/*"
    ]
}
